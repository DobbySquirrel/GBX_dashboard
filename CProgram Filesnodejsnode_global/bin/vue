#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/../lib/node_modules/@vue"
else
  export NODE_PATH="$NODE_PATH:$basedir/../lib/node_modules/@vue"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../lib/node_modules/@vue/cli/bin/vue.js" "$@"
else
  exec node  "$basedir/../lib/node_modules/@vue/cli/bin/vue.js" "$@"
fi
